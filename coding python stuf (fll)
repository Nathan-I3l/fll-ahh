from hub import light_matrix, port
import runloop, motor, motor_pair

async def main():
    # write your code here
    await light_matrix.write("sugoma")
    motor.run_for_degrees(port.A, 720, 360)
    motor.run_for_degrees(port.E, 720, -360)
runloop.run(main())

